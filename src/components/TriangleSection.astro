---
const { backgroundColor = "transparent" } = Astro.props;

const encodedSVG = encodeURIComponent(
    `<svg width='22' height='40' xmlns='http://www.w3.org/2000/svg'><polygon points='0,20 11,0 22,20' fill='#000'/></svg>`
);
---

<div class="triangle-border-box" style={`background-color: ${backgroundColor};`}>
    <div
        class="spikes spikes-top"
        style={`
            mask-image: url("data:image/svg+xml;utf8,${encodedSVG}"); 
            background-color: ${backgroundColor}; 
        `}
    >
    </div>
    <div
        class="spikes spikes-bottom"
        style={`
            mask-image: url("data:image/svg+xml;utf8,${encodedSVG}"); 
            background-color: ${backgroundColor}; 
            transform: rotate(180deg);
        `}
    >
    </div>
    <div class="centered-content">
        <slot />
    </div>
</div>

<style>
    .triangle-border-box {
        position: relative;
        padding: 2rem;
        z-index: 1;
        box-sizing: border-box;
    }

    .spikes {
        position: absolute;
        pointer-events: none;
        z-index: 2;
        left: 0;
        width: 100%;
        height: 20px;

        mask-repeat: repeat-x;
        mask-size: 20px 20px;
        -webkit-mask-repeat: repeat-x;
        -webkit-mask-size: 20px 20px;
    }

    .spikes-top {
        top: -10px;
    }

    .spikes-bottom {
        bottom: -10px;
    }

    .centered-content {
        width: 70%;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
</style>
